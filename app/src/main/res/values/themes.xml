<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Thème principal de l'application -->
    <style name="Theme.ShouldIOrder" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Thème pour le Splash Screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Couleur de fond du Splash Screen -->
        <item name="windowSplashScreenBackground">@color/splash_screen_background</item>

        <!-- Icône au centre (utilise l'icône de l'app par défaut) -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        
        <!-- Thème à appliquer après le Splash Screen -->
        <item name="postSplashScreenTheme">@style/Theme.ShouldIOrder</item>
    </style>
</resources>
